{
  "compilerOptions": {
    "moduleResolution": "Node",
    "lib": [ "esnext", "DOM" ],
    "strictNullChecks": true,
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "outDir": "dist/es",
    "rootDir": "src",
    "baseUrl": "."
  },
  "include": [ "src/**/*" ]
}